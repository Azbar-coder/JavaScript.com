extends /views/layouts/layout-bleed

block content

  .row.hero.bc-regent
    .cell.well.well--l
      .mbxl.tac
        h2 Not sure where JavaScript came from?
        p.tfh Watch our animated short.

        a.btn.js-video-trigger(href='#') Watch Video

        .video
          video.video-element.js-video-element(controls preload="none")
            source(src='/videos/sky.mp4' type='video/mp4')

      .g
        .g-b.g-b--l--1of2.fr

          h3.h.h--3.mbs Ready to try JavaScript?

          div(ng-app='javascriptcom' class='course--mini')
            js-course.hero-challenge(course='intro')

    include /views/partials/_hero_img

  .layout-secondary
    .row.bc-bostonBlue.tci
      .cell.well
        .g
          .g-b.g-b--m--1of2

            p.mtm.pts.tfh
              strong Want the latest JavaScript news delivered right to your inbox?

          .g-b.g-b--m--1of2

            form.form.mtm(action='/subscribe' method='post')
              fieldset.form-field.form-field--inline
                .g
                  .g-b.g-b--m--3of5
                    input.form-input.form-input--dark.form-input--inline.mbs.mbf--m(type='email' name='email' placeholder='Email Address')
                  .g-b.g-b--m--2of5
                    input.btn.btn--b.form-btn(type='submit' value='Sign Up')

    .row
      .cell.cell--s.well.well--xl
        each item in news
          h2.h.h--2= item.title
          p!= item.body
