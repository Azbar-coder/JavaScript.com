- item = item || {}
- item.title = item.title || 'Placeholder Title'
- item.url = item.url || '#'
- item.media = item.media || 'http://placehold.it/220x120'
- item.description = item.description || ''

li.list-item
  article.bucket.bucket--flag.bucket--l
    a.bucket-media(href="#{item.url}")
      img.thumb.thumb--m(src="#{item.media}" width="220" alt="#{item.title}")
    .bucket-content
      h2.h.h--3
        a.tct.tc-ht.twb.js-toggle(href="#{item.url}")
          = item.title
          span.mlxs.op1of2.por.pot2n.tcs.is-hidden
            - iconPartial = { name: 'external', size: 16 }
            include /views/partials/_icon

      p.mbf= item.description
